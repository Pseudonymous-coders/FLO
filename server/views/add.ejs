<!doctype html>
<html>
<head>
    <title>Slumber | Profile</title>
    <% include partials/head %>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.bundle.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <% include partials/header %>
    </div>
    <div class="row">
      <div class="normFont text-center">
        <h1>Hello <%= user.local.fname.charAt(0).toUpperCase() + user.local.fname.slice(1) %></h1>
      </div>
      <div class="page-header text-center">
        <a href="/logout" class="btn btn-flat btn-sm">Logout</a>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="well normText">
            <h4 class="normFont"><span class="fa fa-user"></span> Your Info</h4>
            <p class="cap">
              <strong class="noCap">ID</strong>: <%= user._id %><br />
              <strong>First name</strong>: <%= user.local.fname %> <br />
              <strong>Last name</strong>: <%= user.local.lname %> <br />
              <strong>Email</strong>: <%= user.local.email %><br />
            </p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="well normText">
            <div class="row">
              <h4 class="normFont col-sm-11"><span class="fa fa-graduation-cap"> Your classes</span></h4>
              <a class="btn-floating btn-large waves-effect waves-light black" href="/add"><i class="material-icons">add</i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <% include partials/footer %>
  </div>
</body>
</html>
